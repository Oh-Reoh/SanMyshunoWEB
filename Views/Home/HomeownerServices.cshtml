@{
    Layout = "~/Views/Shared/Homeowner.cshtml";
}

<link rel="stylesheet" href="/css/services.css">
<script src="/js/services.js"></script>

<div class="admin-home-container homeowner-container">
    <!-- Facility Request Icon -->
    <div class="facility-request-icon">
        <img src="/images/facility-icon.png" alt="Request Service" id="requestServiceBtn">
    </div>

    <!-- Main Feed -->
    <div class="feed-container full-width">
        <!-- Toggle Buttons -->
        <div class="toggle-buttons">
            <button id="pendingBtn" class="toggle-btn active">Pending</button>
            <button id="completedBtn" class="toggle-btn">Completed</button>
        </div>

        <!-- Pending Services -->
        <div id="pendingList" class="list-container active">
            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">Leak Repair - Unit B12</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Jane</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Status:</span>
                        <span class="item-value">Not started</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:#e85a5a;">To pay</span>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="pay-now-btn">Pay Now</button>
                </div>
            </div>

            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">AC Unit Checkup - Unit D21</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Karl</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Status:</span>
                        <span class="item-value">Not started</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:#e85a5a;">To pay</span>
                    </div>
                </div>
                <div class="item-actions">
                    <button class="pay-now-btn">Pay Now</button>
                </div>
            </div>
        </div>

        <!-- Completed Services -->
        <div id="completedList" class="list-container">
            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">Drainage Cleaning - Lobby</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Sophie</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Status:</span>
                        <span class="item-value">Completed</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:green;">Paid</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2><span style="color:#e85a5a;">Pay</span> for the service</h2>

        <div class="service-details">
            <p><span class="label-black">Service description:</span> <span id="paymentServiceDesc"></span></p>
            <p><span class="label-black">Service type:</span> <span id="paymentServiceType"></span></p>
            <p><span class="label-black">Confirmed by:</span> <span id="paymentConfirmedBy"></span></p>
        </div>

        <div class="payment-form">
            <div class="form-group">
                <select id="paymentMethod" class="form-control">
                    <option value="">Select payment method</option>
                    <option value="credit">Gcash</option>
                    <option value="debit">Paymaya</option>
                    <option value="bank">Credit Card</option>
                </select>
            </div>

            <div class="form-group">
                <p><span class="label-black">Total:</span> <span id="paymentTotal">₱500.00</span></p>
            </div>

            <button id="submitPayment" class="pay-btn">Pay</button>
        </div>
    </div>
</div>

<!-- Request Service Modal -->
<div id="requestServiceModal" class="modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2><span style="color:#e85a5a;">Request</span> a service</h2>

        <div class="request-form">
            <div class="form-group">
                <textarea id="serviceDescription" class="form-control" placeholder="Enter service description"></textarea>
            </div>

            <div class="form-group">
                <select id="serviceType" class="form-control">
                    <option value="">Select service type</option>
                    <option value="maintenance">Maintenance</option>
                    <option value="repair">Repair</option>
                    <option value="installation">Installation</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <button id="submitRequest" class="request-btn">Request</button>
        </div>
    </div>
</div>