@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<link rel="stylesheet" href="/css/services.css">
<script src="/js/services.js"></script>

<div class="admin-home-container">
    <!-- LEFT: Main Feed -->
    <div class="feed-container">
        <!-- Toggle Buttons -->
        <div class="toggle-buttons">
            <button id="pendingBtn" class="toggle-btn active">Pending</button>
            <button id="completedBtn" class="toggle-btn">Completed</button>
        </div>

        <!-- Pending Services -->
        <div id="pendingList" class="list-container active">
            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">Leak Repair - Unit B12</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Requested by:</span>
                        <span class="item-value">John Dela Cruz</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Jane</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:#e85a5a;">To pay</span>
                    </div>
                </div>
                <div class="item-actions">
                    <select>
                        <option selected>Not started</option>
                        <option>In progress</option>
                        <option>Completed</option>
                    </select>
                </div>
            </div>

            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">AC Unit Checkup - Unit D21</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Requested by:</span>
                        <span class="item-value">Mary Santos</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Karl</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:#e85a5a;">To pay</span>
                    </div>
                </div>
                <div class="item-actions">
                    <select>
                        <option selected>Not started</option>
                        <option>In progress</option>
                        <option>Completed</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Completed Services -->
        <div id="completedList" class="list-container">
            <div class="list-item">
                <div class="item-details">
                    <div class="item-name">Drainage Cleaning - Lobby</div>
                    <div class="item-date">
                        <span class="label-black">Service type:</span>
                        <span class="item-value">Maintenance</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Requested by:</span>
                        <span class="item-value">Carlos Reyes</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Confirmed by:</span>
                        <span class="item-value">Admin Sophie</span>
                    </div>
                    <div class="item-owner">
                        <span class="label-black">Payment status:</span>
                        <span class="item-value" style="color:green;">Paid</span>
                    </div>
                </div>
                <div class="item-actions">
                    <select>
                        <option>Not started</option>
                        <option>In progress</option>
                        <option selected>Completed</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- RIGHT: Sidebar (Service Requests) -->
    <div class="sidebar-container">
        <h2 class="sidebar-title">Services Requests</h2>

        <div class="request-item">
            <div class="request-details">
                <div class="request-name">Ceiling Light Repair</div>
                <div class="request-owner">
                    <span class="label-black">Service type:</span>
                    <span class="item-value">Maintenance</span>
                </div>
                <div class="request-date">
                    <span class="label-black">Requested by:</span>
                    <span class="item-value">Lara Cruz</span>
                </div>
            </div>
            <div class="request-actions">
                <button class="delete-btn">Delete</button>
                <button class="confirm-btn">Confirm</button>
            </div>
        </div>

        <div class="request-item">
            <div class="request-details">
                <div class="request-name">Broken Door Lock</div>
                <div class="request-owner">
                    <span class="label-black">Service type:</span>
                    <span class="item-value">Maintenance</span>
                </div>
                <div class="request-date">
                    <span class="label-black">Requested by:</span>
                    <span class="item-value">Mark Dizon</span>
                </div>
            </div>
            <div class="request-actions">
                <button class="delete-btn">Delete</button>
                <button class="confirm-btn">Confirm</button>
            </div>
        </div>
    </div>
</div>
