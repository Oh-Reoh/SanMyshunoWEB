@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<link rel="stylesheet" href="/css/AdminHome.css">
<script src="/js/createPost.js"></script>
<script src="/js/comments.js"></script>
<script src="/js/createPoll.js"></script>
<div class="admin-home-container">
    <!-- Main Feed -->
    <div class="feed-container">
        <!-- Create Post -->
        <div class="create-post" id="createPostTrigger">
            <div class="post-avatar">
                <img src="/images/profile-icon.png" alt="Admin">
            </div>
            <input type="text" class="post-input" placeholder="Announce something to your community" readonly>
        </div>

        <!-- Posts -->
        <div class="feed-container" id="feedContainer">
            <!-- This is where new posts will be inserted -->
        </div>
    </div>

    <!-- Right Sidebar -->
    <div class="sidebar-container">
        <button class="create-poll-btn">Create Poll/Survey</button>

        <div class="question-list">
            <!-- Questions will be added dynamically here -->
        </div>

    </div>
</div>

<div class="modal-overlay" id="postModal">
    <div class="modal">
        <div class="modal-header">
            <h2 class="modal-title"><span>Announce</span> a post</h2>
            <button class="modal-close" id="closeModal">&times;</button>
        </div>
        <div class="modal-author">
            <div class="post-avatar">
                <img src="/images/profile-icon.png" alt="Admin">
            </div>
            <div class="modal-author-info">Admin Name</div>
        </div>
        <div class="modal-body">
            <textarea class="modal-textarea" placeholder="Start writing here..." id="postContent"></textarea>
        </div>
        <div class="modal-file-upload">
            <button class="file-upload-btn" id="fileUploadBtn">
                <img src="/images/upload-icon.png" alt="Upload"> Upload file
            </button>
        </div>
        <div class="modal-footer">
            <button class="post-btn" id="submitPost">Post</button>
        </div>
    </div>
</div>

<div class="modal-overlay" id="commentModal">
    <div class="modal">
        <div class="modal-header">
            <h2 class="modal-title"><span>Comment</span> on this post</h2>
            <button class="modal-close" id="closeCommentModal">&times;</button>
        </div>

        <!-- Original post content -->
        <div class="modal-body">
            <div class="modal-author" style="padding: 0;">
                <div class="post-avatar">
                    <img src="/images/profile-icon.png" alt="Admin" id="originalPostAvatar">
                </div>
                <div class="modal-author-info">
                    <div id="originalPostAuthor" style="font-weight: bold;">Admin Name</div>
                    <div class="post-date" id="originalPostDate">April 4, 2025</div>
                </div>
            </div>

            <div id="originalPostContent">
                <!-- Original post content will be inserted here -->
            </div>

            <!-- Comment list -->
            <div class="comment-list" id="commentList">
                <!-- Comments will be inserted here -->
            </div>
        </div>

        <!-- Comment input -->
        <div class="comment-input-wrapper">
            <input type="text" class="comment-input" id="newCommentInput" placeholder="Write a comment...">
            <button class="comment-btn" id="submitComment">Comment</button>
        </div>
    </div>
</div>

<!-- Modal for Creating Poll/Survey -->
<div class="modal-overlay" id="pollModal">
    <div class="modal">
        <div class="modal-header">
            <h2 class="modal-title"><span>Create</span> a poll/survey</h2>
            <button class="modal-close" id="closePollModal">&times;</button>
        </div>
        <div class="modal-body">
            <textarea class="modal-textarea" placeholder="Ask a question..." id="pollQuestion"></textarea>

            <div class="poll-options" id="pollOptions">
                <div class="poll-option">
                    <input type="radio" disabled>
                    <input type="text" class="option-input" placeholder="Option 1">
                </div>
            </div>

            <div class="add-option-container">
                <button class="add-option-btn" id="addOptionBtn">
                    <input type="radio" disabled>
                    <span>Add option</span>
                </button>
            </div>
        </div>
        <div class="modal-footer">
            <button class="post-btn" id="publishPoll">Publish</button>
        </div>
    </div>
</div>
