@{
    Layout = "~/Views/Shared/Start.cshtml";
}

<link rel="stylesheet" href="/css/newPassword.css">
<script src="/js/forgotPassword.js"></script>

<div class="new-password-page">
    <div class="password-container">
        <div class="password-header">
            <h2><span>Choose</span> a new password</h2>
        </div>
        <form id="newPasswordForm">
            <div class="form-group">
                <input type="password" class="form-control" placeholder="New Password" required>
            </div>
            <div class="buttons-container">
                <button type="button" class="btn btn-cancel" onclick="window.location.href='/Home/FindAccount'">Cancel</button>
                <button type="submit" class="btn btn-continue">Continue</button>
            </div>
        </form>
    </div>
</div>