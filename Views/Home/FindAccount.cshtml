@{
    Layout = "~/Views/Shared/Start.cshtml";
}

<link rel="stylesheet" href="/css/findAccount.css">
<script src="/js/forgotPassword.js"></script>

<div class="find-account-page">
    <div class="find-container">
        <div class="find-header">
            <h2><span>Find</span> your account</h2>
        </div>
        <form id="findAccountForm">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="buttons-container">
                <button type="button" class="btn btn-cancel" onclick="window.location.href='/'">Cancel</button>
                <button type="submit" class="btn btn-search">Search</button>
            </div>
        </form>
    </div>
</div>