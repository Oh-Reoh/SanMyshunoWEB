@{
    Layout = "~/Views/Shared/Start.cshtml";
}
<link rel="stylesheet" href="/css/login.css">
<div class="login-page">
    <div class="community-content">
        <h1>Connect with your Community</h1>
        <p>Stay connected to the heart of your homes at San Myshuno.</p>
    </div>

    <div class="login-container">
        <div class="login-header">
            <h2><span>Log in</span> to your account</h2>
        </div>
        <form method="post" action="/Home/Login">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="login-btn">Log In</button>
            <div class="forgot-password">
                <a href="/Home/FindAccount">Forgot your password?</a>
            </div>
        </form>
    </div>
</div>